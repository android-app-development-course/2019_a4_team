<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/top" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_fanhui" />

    <TextView
        android:id="@+id/title"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:text="信息题目："
        android:textColor="#070707"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="9dp"
        android:hint="请填写信息题目"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/title"/>

    <TextView
        android:id="@+id/locate"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="地点："
        android:textColor="#070707"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="9dp"
        android:hint="请输入信息的地点"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/locate"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:text="有效期限："
        android:textColor="#070707"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="9dp"
        android:hint="请填写信息的有效期限"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/time"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:text="人数限制："
        android:textColor="#070707"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginRight="9dp"
        android:hint="请填写人员数量限制"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/number"/>

    <TextView
        android:id="@+id/picture"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        android:text="封面图片："
        android:textColor="#070707"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btn1"
        android:text="上传本地图片"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/picture"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:text="信息类型："
        android:textColor="#070707"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/type"
        android:entries="@array/types" />

    <TextView
        android:id="@+id/detailed"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="20dp"
        android:text="详细内容："
        android:textColor="#070707"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/del"
        android:layout_width="171dp"
        android:layout_height="91dp"
        android:layout_marginTop="320dp"
        android:hint="请填写详细内容"
        android:scrollbars="vertical"
        android:layout_toRightOf="@+id/detailed"/>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/del"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="了解发布信息的标准"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:gravity="center"
        android:layout_below="@+id/del"
        android:layout_marginTop="8dp"
        android:text="《易组用户发布信息须知》"
        android:textColor="#00f"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/tv1"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="将有助于您的信息被精确浏览"
        android:layout_below="@+id/tv1"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:background="#F44336"
        android:text="预览"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/tv2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:background="#F44336"
        android:text="发布"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/button1" />

</RelativeLayout>