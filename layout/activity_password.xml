<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_passwordtitle"/>
    <RelativeLayout
        android:id="@+id/tablelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/K1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textview_border" />

        <ImageView
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_p" />

        <EditText
            android:id="@+id/hysmm"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="请输入原始密码"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/K2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/textview_border" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1"
            android:layout_marginTop="85dp"
            android:background="@drawable/ic_p" />

        <EditText
            android:id="@+id/hsjhm"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:hint="请输入您的新密码"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/K3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/textview_border" />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/ic_p" />

        <EditText
            android:id="@+id/hzcsr"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="130dp"
            android:background="@null"
            android:hint="请再次输入您的新密码"
            android:textSize="20dp" />

        <Button
            android:id="@+id/modify_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/hzcsr"
            android:layout_marginTop="50dp"
            android:background="@color/theme"
            android:text="确定修改"
            android:textColor="@color/white"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/tv_bottom"
          android:layout_below="@id/modify_button"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@android:color/holo_blue_dark"/>
    </RelativeLayout>
</LinearLayout>